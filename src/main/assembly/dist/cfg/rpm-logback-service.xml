<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true" scanPeriod="1 minute">
    <property name="LOGDIR" value="/var/opt/dans.knaw.nl/log/easy-bag-index" />
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGDIR}/easy-bag-index.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGDIR}/easy-bag-index.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{ISO8601}] %-5level %msg%n%ex</pattern>
        </encoder>
    </appender>
    <root level="warn">
        <appender-ref ref="FILE"/>
    </root>
    <logger name="nl.knaw.dans.easy" level="info"/>

    <!-- Shut up the bagit lib 4 about there not being a "fetch status" code in fetch.txt, which is not in the standard -->
    <logger name="gov.loc.repository.bagit.impl.FetchTxtReaderImpl" level="off"/>
</configuration>
